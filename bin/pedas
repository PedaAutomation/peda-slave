#!/usr/bin/env node

function list(val) {
  return val.split(',');
}

var program   = require('commander'),
    npm       = require('npm'),
    PedaSlave = require('../lib/index.js'),
    pkg       = require('../package.json');

program
  .version(pkg.version)
  .option('-P, --plugins <plugins>', 'The plugins you want to use.', list, [])
  .option('-N, --name <name>', 'The name of this slave.', "Slave")
  .parse(process.argv);

npm.load(function() {
  pedaSlave = new PedaSlave({ plugins: program.plugins, name: program.name }, npm);
});
